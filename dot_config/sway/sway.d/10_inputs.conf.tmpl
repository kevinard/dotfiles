input type:touchpad {
  accel_profile adaptive
  click_method clickfinger
  drag enabled
  drag_lock enabled
  scroll_method two_finger
  scroll_factor 1.0
  tap enabled
  tap_button_map lrm
}

seat "*" hide_cursor 5000
