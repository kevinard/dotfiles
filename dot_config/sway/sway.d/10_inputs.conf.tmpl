# Input settings
input type:keyboard {
  repeat_delay 300
  repeat_rate 40
{{- if eq .env "home" }}
  xkb_layout us
  xkb_variant altgr-intl
{{- end }}
{{- if eq .env "work" }}
  xkb_layout fr
{{- end }}
  xkb_options shift:both_capslock,caps:escape
  xkb_numlock enabled
}

