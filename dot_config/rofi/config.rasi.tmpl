configuration{
    modi: "run,drun,projects:~/.config/rofi/scripts/projects.sh";
    show-icons: true;
    terminal: "kitty";
    drun-display-format: "{icon} {name}";
    location: 0;
    disable-history: false;
    hide-scrollbar: true;
    display-drun: "   Apps ";
    display-run: "   Run ";
	display-filebrowser: "   Projects ";
    sidebar-mode: true;
	case-sensitive: false;
	matching: "fuzzy";
	sort: true;
	sorting-method: "fzf";
	font: "sans-serif 14";
}

@theme "catppuccin-{{ .themeFlavour }}"
